{
    "manifest_version": 2,
    "name": "RetroCalc",
    "description": "A Simple Calculator On-the-Fly",
    "version": "1.0.0.0",
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_popup": "popup.html",
        "default_title": "RetroCalc"
    },
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "incognito": "spanning",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs"
    ]
}
